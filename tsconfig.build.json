{
  "compilerOptions": {
    "downlevelIteration": true,
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext", "es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "declaration": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "prod-intermediary",
    "plugins": [{ "transform": "@effect-ts/tracing-plugin" }]
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "goods/**/*.ts",
    "goods/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
