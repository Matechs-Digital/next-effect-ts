{
  "compilerOptions": {
    "downlevelIteration": true,
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext", "es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
    //"plugins": [{ "transform": "@effect-ts/tracing-plugin" }],
    //"outDir": "debug"
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "context/**/*.tsx",
    "environment/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
